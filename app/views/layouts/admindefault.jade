              li
                a(href="#!/pokertemplates")
                  i.icon-money
                  |  Poker
              li
                a(href="#!/slottemplates")
                  i.icon-money
                  |  Slots
          li
            a.dropdown-toggle(href="#")
              i.icon-file-text
              span.menu-text
                |  Reports 
              b.arrow.icon-angle-down  
            ul.submenu
              li
                a(href="#!/moneyflow")
                  i.icon-money
                  |  Moneyflow
        div#sidebar-collapse.sidebar-collapse
          i.icon-double-angle-left         
      section.main-content
